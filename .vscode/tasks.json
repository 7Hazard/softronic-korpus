{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Fetch backend dependencies",
			"command": "npm i",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"problemMatcher": [],
			"dependsOn": ["Fetch global dependencies"]
		},
		{
			"type": "shell",
			"label": "Fetch global dependencies",
			"command": "npm i",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Run tests",
			"command": "npm run tests",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"problemMatcher": [],
		},
		{
			"type": "typescript",
			"tsconfig": "backend/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "Build backend"
		},
		{
			"type": "typescript",
			"tsconfig": "backend/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "Watch build backend"
		}
	]
}