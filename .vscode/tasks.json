{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Fetch backend dependendencies",
			"command": "npm i",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"type": "typescript",
			"tsconfig": "backend/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "Build backend"
		},
		{
			"type": "typescript",
			"tsconfig": "backend/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "Watch build backend"
		}
	]
}