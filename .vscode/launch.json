  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Backend",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/backend/src/index.ts",
      "runtimeArgs": ["--experimental-modules", "--es-module-specifier-resolution=node"],
      "outFiles": [
        "${workspaceFolder}/backend/out/**/*.js"
      ],
      "preLaunchTask": "Build backend"
    }
  ]
}